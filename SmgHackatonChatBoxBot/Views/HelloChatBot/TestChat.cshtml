    <script type="text/jscript">
        $(document).mouseup(function (e) {
            var container = $("#chatbox");
            if (!container.is(e.target) && container.has(e.target).length === 0) {
                container.fadeOut();
            }
        });

        $(document).ready(function () {
            $('#userMessage').on('keypress', function (e) {
                if (e.which === 13) {
                    submit();
                }
            });

            $('#btnSubmit').click(function () {
                submit();
            })

            $('#openReport').click(function () {
                window.open('/HelloChatBot/GetReport', "_blank");
            })

            function submit() {
                var url = "/HelloChatBot/GetChatMessage";
                var message = $('#userMessage').val();
                $.post(url, { userMessage: message }, function (data) {
                    $.each(data, function (i, msg) {
                        $('#userMessage').val('');
                        console.log(msg);
                        var content = "";
                        if (msg.msgType == 0) {
                            content += "<article class='msg-container msg-self'>";
                            content += "<div class='msg-box' style='color: white;'>";
                            content += "<div class='flr'>";
                            content += "<div class='messages'>";
                            content += "<p class='msg'>";
                            content += msg.chatMessage;
                            content += "</p>";
                            content += "</div>";
                            content += "<span class='timestamp'><span class='username'>User</span>&bull;<span class='posttime'>Some minutes ago</span></span></div>";
                            content += "<img class='user-img' src='/images/user.png' />";
                            content += "</div></article>";
                        } else {
                            content += "<article class='msg-container msg-remote'>";
                            content += "<div class='msg-box'>";
                            content += "<img class='user-img' src='/images/scouty.png' />";
                            content += "<div class='flr'>";
                            content += "<div class='messages'>";
                            content += "<p class='msg'>";
                            content += msg.chatMessage;
                            content += "</p>";
                            content += "</div>";
                            content += "<span class='timestamp'><span class='username'>Scouty</span>&bull;<span class='posttime'>Some minutes ago</span></span>";
                            content += "</div></div></article>";
                        }
                        $("#chatWindow").append(content);
                    });

                    $("#chatWindow").scrollTop($("#chatWindow").prop('scrollHeight'));
                });
            }
        });

        function openForm() {
            document.getElementById("chatbox").style.display = "block";
        }

        function closeForm() {
            document.getElementById("chatbox").style.display = "none";
        }
    </script>
</head>
<body class="landing-page landing-page1">    
    <button class="open-button" onclick="openForm()">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
        </svg>
        Chat with us
    </button>
    <section class="chatbox" id="chatbox">
        <section id="chatWindow" class="chat-window">
            <article class="msg-container msg-remote">                
                <div class="msg-box">
                    <img class="user-img" src="/images/scouty.png" />
                    <div class="flr">
                        <div class="messages">
                            <p class="msg" id="msg-1">
                                Hello, my name is Scouty. How may I help you?
                            </p>
                        </div>
                        <span class="timestamp"><span class="username">Bot</span>&bull;<span class="posttime">Some minutes ago</span></span>
                    </div>
                </div>
            </article>
        </section>
    <div class="chat-input">
        <input type="text" id="userMessage" autocomplete="off" placeholder="Type a message" />
        <button type="button" id="btnSubmit">
            <svg style="width:24px;height:24px" viewBox="0 0 24 24"><path fill="rgba(0,0,0,.38)" d="M17,12L12,17V14H8V10H12V7L17,12M21,16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V7.5C3,7.12 3.21,6.79 3.53,6.62L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.79,6.79 21,7.12 21,7.5V16.5M12,4.15L5,8.09V15.91L12,19.85L19,15.91V8.09L12,4.15Z" /></svg>
        </button>
    </div>
        
    </section>


</body>
</html>
